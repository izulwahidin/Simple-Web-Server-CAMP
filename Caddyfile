{
	http_port 80
	https_port 443
}

localhost {
    root / /app/public/
	encode gzip
    php_fastcgi php:9000
    file_server

    redir /adminer /adminer/
    handle_path /adminer/ {
		reverse_proxy * 172.18.0.1:8080 {
			header_up Host {upstream_hostport}
		}
	}

    handle_errors {
    	respond "{http.error.status_code} {http.error.status_text}"
    }
}